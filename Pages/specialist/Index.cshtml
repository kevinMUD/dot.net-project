@page
@model healthcareinsurenc.Pages.specialist.IndexModel
@{
}
<br />
<h2> LIST OF SPECIALIST</h2>
<a class="btn btn-primary btn-sm" href="/specialist/create">New Patient</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Specialization</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listspecialist)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.specialization</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/specialist/edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/specialist/delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
